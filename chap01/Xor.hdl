/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Or(a=a, b=b, out=or);
    And(a=a, b=b, out=both);
    Not(in=both, out=notboth);
    And(a=or, b=notboth, out=out);
}